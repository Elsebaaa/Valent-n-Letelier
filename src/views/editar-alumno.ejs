<% var script = 'subir-alumno'; %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Agregar Alumno</title>
  <%- include('partials/head') %>
</head>
<body>
  <main class="container my-5">
    <% if (usuario && (usuario.rol === 'admin' || usuario.rol === 'profesor')) { %>
      <h2 class="text-center mb-4">üì• Agregar Alumno</h2>

      <form action="/admin/subir-alumno" method="POST" class="bg-white shadow p-4 rounded">
        <div class="mb-3">
          <label>Nombre:</label>
          <input type="text" name="nombre" class="form-control" required>
        </div>

        <div class="mb-3">
          <label>Apellido:</label>
          <input type="text" name="apellido" class="form-control" required>
        </div>

        <div class="mb-3">
          <label>RUT:</label>
          <input type="text" name="rut" class="form-control" required>
        </div>

        <div class="mb-3">
          <label>Curso:</label>
          <select name="curso_id" class="form-control" required>
            <% cursos.forEach(curso => { %>
              <option value="<%= curso.id %>"><%= curso.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label>Tel√©fono Apoderado:</label>
          <input type="text" name="telefono_apoderado" class="form-control" required>
        </div>

        <div class="mb-3">
          <label>Contrase√±a:</label>
          <input type="password" name="contrasena" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-success">Registrar Alumno</button>
      </form>
    <% } else { %>
      <div class="alert alert-danger text-center">
        ‚ö†Ô∏è Acceso denegado. Solo el administrador o profesor puede registrar alumnos.
      </div>
    <% } %>
  </main>
</body>
</html>

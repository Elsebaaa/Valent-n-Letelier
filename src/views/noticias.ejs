<% var script = 'noticias'; %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Noticias - Escuela Los Acacios</title>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navigation') %>

  <main class="container py-5">
    <h2 class="text-center text-primary fw-bold mb-5">ğŸ“° Noticias</h2>

    <div class="row g-4">
      <% if (noticias && noticias.length > 0) { %>
        <% noticias.forEach(n => { %>
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <img src="<%= n.imagen %>" class="card-img-top" alt="Imagen noticia">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h6 class="text-muted">ğŸ“… 
                    <%= new Date(n.fecha).toLocaleDateString('es-CL', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                  </h6>
                  <h5 class="card-title"><%= n.titulo %></h5>
                  <p class="card-text"><%= n.descripcion %></p>
                </div>

                <% if (usuario && usuario.rol === 'admin') { %>
                  <div class="d-flex justify-content-between mt-3">
                    <a href="/admin/editar-noticia/<%= n.id %>" class="btn btn-sm btn-warning">âœï¸ Editar</a>
                    <form action="/admin/eliminar-noticia/<%= n.id %>" method="POST" class="form-eliminar-noticia" data-titulo="<%= n.titulo %>">
                      <button type="submit" class="btn btn-sm btn-danger">ğŸ—‘ Eliminar</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No hay noticias disponibles.</p>
      <% } %>
    </div>

    <% if (usuario && usuario.rol === 'admin' && noticias.length < 5) { %>
      <div class="text-center mt-5">
        <a href="/admin/subir-noticia" class="btn btn-primary">â• Subir nueva noticia</a>
      </div>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>

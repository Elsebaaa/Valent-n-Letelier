<% var script = 'editar-directivo'; %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Editar Directivo</title>
  <%- include('partials/head') %>
</head>
<body>

  <a href="/directivos" class="btn btn-secondary mb-3">
    <i class="fas fa-arrow-left"></i> Volver
  </a>

  <div class="formulario-directivo">
    <h2>Editar Directivo</h2>

    <form action="/admin/editar-directivo/<%= directivo.id %>" method="POST">
      <div class="form-group">
        <label for="nombre">Nombre completo:</label>
        <input type="text" id="nombre" name="nombre" value="<%= directivo.nombre %>" required>
      </div>

      <div class="form-group">
        <label for="rut">RUT:</label>
        <input type="text" id="rut" name="rut" value="<%= directivo.rut %>" required>
      </div>

      <div class="form-group">
        <label for="cargo">Cargo:</label>
        <input type="text" id="cargo" name="cargo" value="<%= directivo.cargo %>" required>
      </div>

      <div class="form-group">
        <label for="correo">Correo electrónico:</label>
        <input type="email" id="correo" name="correo" value="<%= directivo.correo %>" required>
      </div>

      <div class="form-group">
        <label for="telefono">Teléfono:</label>
        <input type="text" id="telefono" name="telefono" value="<%= directivo.telefono %>" required>
      </div>

      <button type="submit" class="btn btn-success">Guardar Cambios</button>
    </form>
  </div>

</body>
</html>
